---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import DotBackgroundDemo from '../components/ui/dot-background-demo';
---

<BaseLayout 
	title="Learn | Carlos Garcia | 3D Tutorials & Educational Resources" 
	description="Tutorials, courses, and educational resources for artists navigating 3D workflows. Learn Houdini, Blender, technical art, and pipeline development from Carlos Garcia."
	keywords="3D Tutorials, Houdini Tutorials, Blender Tutorials, Technical Art Education, Pipeline Training, 3D Workflow, Artist Education, Online Courses"
>
<Header />
	<main class="min-h-screen w-full bg-white dark:bg-zinc-950 text-gray-900 dark:text-gray-200">
		<DotBackgroundDemo client:load />
		
		<!-- Hero Section -->
		<div class="relative z-10 w-full py-8 md:py-12 lg:py-16">
			<div class="max-w-[90rem] mx-auto px-6 sm:px-8 md:px-12 lg:px-16">
				<h1 class="text-4xl sm:text-5xl md:text-6xl font-normal text-gray-800 dark:text-white mb-6">
					Learn
				</h1>
				<p class="text-lg sm:text-xl text-gray-600 dark:text-gray-400 max-w-3xl leading-relaxed">
					Tutorials, courses, and resources for artists navigating 3D workflows and creative development. From technical foundations to artistic theory, these resources help build skills with intention.
				</p>
			</div>
		</div>

		{/* Divider */}
		<div class="relative z-10 w-full">
			<div class="max-w-[90rem] mx-auto px-6 sm:px-8 md:px-12 lg:px-16">
				<div class="border-t border-gray-200 dark:border-gray-800"></div>
			</div>
		</div>

		<!-- Coming Soon -->
		<div class="relative z-10 w-full py-8 md:py-12 lg:py-16">
			<div class="max-w-[90rem] mx-auto px-6 sm:px-8 md:px-12 lg:px-16">
				<p class="text-center text-gray-500 dark:text-gray-500">
					Educational content coming soon. Check back for updates.
				</p>
			</div>
		</div>
	</main>
<Footer />
</BaseLayout>
