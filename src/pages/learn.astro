---
import BaseLayout from '../layouts/base-layout.astro';
import Header from '../components/layout/header.astro';
import Footer from '../components/layout/footer.astro';
import DotBackground from '../components/ui/dot-background.astro';
import ComingSoonSection from '../components/sections/coming-soon-section.astro';
---

<BaseLayout 
	title="Learn | Carlos Garcia | 3D Tutorials & Educational Resources" 
	description="Tutorials, courses, and educational resources for artists navigating 3D workflows. Learn Houdini, Blender, technical art, and pipeline development from Carlos Garcia."
	keywords="3D Tutorials, Houdini Tutorials, Blender Tutorials, Technical Art Education, Pipeline Training, 3D Workflow, Artist Education, Online Courses"
>
<Header />
	<main class="min-h-screen w-full bg-background text-foreground">
		<DotBackground />
		
		<div class="relative z-10">
			<ComingSoonSection 
				title="Learn" 
				description="Tutorials, courses, and resources for artists navigating 3D workflows and creative development. From technical foundations to artistic theory, these resources help build skills with intention."
			/>
		</div>
	</main>
<Footer />
</BaseLayout>
