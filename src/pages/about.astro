---
import BaseLayout from '../layouts/base-layout.astro';
import Header from '../components/layout/header.astro';
import Footer from '../components/layout/footer.astro';
import DotBackground from '../components/ui/dot-background.astro';
import Heading from '../components/ui/heading.astro';
import Text from '../components/ui/text.astro';
import Link from '../components/ui/link.astro';
---

<BaseLayout 
	title="About Carlos Garcia | 3D Artist & Educator | San Antonio, TX" 
	description="Learn about Carlos Garcia - 3D Artist, Technical Director, and Educator based in San Antonio, Texas. Bridging theory and practice through art, code, and education. View resume and contact information."
	keywords="Carlos Garcia, About, 3D Artist Bio, Technical Artist Resume, San Antonio Artist, Educator Bio, Portfolio, Contact"
>
<Header />
	<main class="min-h-screen w-full bg-background text-foreground">
		<DotBackground />
		
		<div class="relative z-10 w-full py-24 sm:py-32">
			<div class="container max-w-4xl mx-auto px-4">
				
				<!-- Header -->
				<div class="mb-16">
					<Heading level={1} size="4xl" class="mb-6">About</Heading>
					<Text size="lg" variant="secondary" class="leading-relaxed">
						3D Artist & Educator based in San Antonio, Texas. I create digital art, develop creative tools, 
						and teach others to build with intention.
					</Text>
				</div>

				<!-- Bio Content -->
				<div class="max-w-none mb-16">
					<Heading level={2} size="2xl" class="mb-4">What I Do</Heading>
					<Text variant="secondary" class="leading-relaxed mb-6">
						I specialize in procedural 3D art, technical workflows, and educational content. 
						My work bridges theory and practice through Houdini, Blender, and custom pipeline tools.
					</Text>
					
					<Heading level={2} size="2xl" class="mb-4 mt-12">Background</Heading>
					<Text variant="secondary" class="leading-relaxed mb-6">
						Currently teaching and creating in San Antonio, Texas. Focused on making technical art 
						more accessible through clear documentation and practical examples.
					</Text>
				</div>

				<!-- Resume Card -->
				<div class="mb-16">
					<Heading level={2} size="2xl" class="mb-6">Resume</Heading>
					<Link href="/resume.pdf" external class="block group">
						<div class="rounded-lg border border-border bg-card p-8 hover:border-border-hover transition-colors">
							<div class="flex items-center justify-between">
								<div>
									<Text size="lg" class="font-medium mb-2">View Full Resume</Text>
									<Text size="sm" variant="secondary">PDF â€¢ Opens in new tab</Text>
								</div>
								<svg class="w-6 h-6 text-foreground-secondary group-hover:text-foreground transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
								</svg>
							</div>
						</div>
					</Link>
				</div>

				<!-- Contact Section -->
				<div>
					<Heading level={2} size="2xl" class="mb-6">Get in Touch</Heading>
					<div class="space-y-4">
						<Link href="mailto:hello@carlosgarcia.works" class="block">
							hello@carlosgarcia.works
						</Link>
						<div class="flex gap-6">
							<Link href="https://twitter.com/carlosgarcia" external>
								Twitter
							</Link>
							<Link href="https://github.com/ProfessorGarcia" external>
								GitHub
							</Link>
						</div>
					</div>
				</div>
				</div>
			</div>
		</div>
	</main>
<Footer />
</BaseLayout>
