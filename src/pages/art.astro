---
import Layout from '../layouts/Layout.astro';
import DotBackgroundDemo from '../components/ui/dot-background-demo';
import BentoGridDemo from '../components/ui/bento-grid-demo';
import CategoryFilter from '../components/ui/category-filter';
import ArtHeroText from '../components/ui/art-hero-text';
---

<Layout title="Art | carlosgarcia.works" description="Digital artwork and 3D exploration by Carlos Garcia">
	<main class="min-h-screen w-full bg-white dark:bg-zinc-950 text-gray-900 dark:text-gray-200">
		<DotBackgroundDemo client:load />
		
		<!-- Hero Section -->
		<div class="relative z-10 w-full pt-24 pb-12">
			<ArtHeroText client:load />
		</div>

		<!-- Category Filter -->
		<div class="relative z-10 w-full py-8 border-b border-gray-200 dark:border-gray-800">
			<CategoryFilter client:load />
		</div>

		<!-- Bento Grid Gallery -->
		<div class="relative z-10 w-full py-12">
			<BentoGridDemo client:load />
		</div>
	</main>
</Layout>
