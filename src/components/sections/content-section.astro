---
import Heading from '../ui/heading.astro';
import Text from '../ui/text.astro';
import PageContainer from '../layout/page-container.astro';

interface Props {
  title?: string;
  description?: string;
  padding?: 'sm' | 'base' | 'lg';
  class?: string;
}

const {
  title,
  description,
  padding = 'base',
  class: className = ''
} = Astro.props;

const spacingClasses = {
  sm: 'py-8 sm:py-12',
  base: 'py-12 sm:py-16 lg:py-20',
  lg: 'py-16 sm:py-20 lg:py-24'
};

const containerClasses = [
  spacingClasses[padding],
  className
].filter(Boolean).join(' ');
---

<section class={containerClasses}>
  <PageContainer>
    {(title || description) && (
      <div class="mb-8 sm:mb-12">
        {title && (
          <Heading level={2} size="3xl">
            {title}
          </Heading>
        )}
        {description && (
          <div class="mt-4">
            <Text size="lg" variant="secondary">
              {description}
            </Text>
          </div>
        )}
      </div>
    )}
    
    <slot />
  </PageContainer>
</section>
