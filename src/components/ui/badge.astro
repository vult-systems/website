---
/**
 * Badge Component
 * 
 * Small label for tags, categories, and status indicators.
 * Uses semantic colors with variants for different contexts.
 * 
 * @example
 * <Badge>Default</Badge>
 * <Badge variant="accent">Featured</Badge>
 * <Badge variant="outline" size="sm">Tag</Badge>
 */

interface Props {
  /** Visual style variant */
  variant?: 'default' | 'accent' | 'outline' | 'muted';
  /** Badge size */
  size?: 'sm' | 'base';
  /** Additional CSS classes */
  class?: string;
}

const {
  variant = 'default',
  size = 'base',
  class: className = ''
} = Astro.props;

const variantClasses = {
  default: 'bg-card text-foreground border border-border',
  accent: 'bg-accent text-background border border-transparent',
  outline: 'bg-transparent text-foreground-secondary border border-border',
  muted: 'bg-card text-foreground-muted border border-border'
};

const sizeClasses = {
  sm: 'px-2 py-0.5 text-xs rounded',
  base: 'px-2.5 py-1 text-sm rounded-md'
};

const classes = [
  'inline-flex items-center justify-center',
  'font-medium whitespace-nowrap',
  variantClasses[variant],
  sizeClasses[size],
  className
].filter(Boolean).join(' ');
---

<span class={classes}>
  <slot />
</span>
